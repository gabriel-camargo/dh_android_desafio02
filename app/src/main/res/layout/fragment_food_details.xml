<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FoodDetailsFragment">

    <ImageView
        android:id="@+id/imgFood_detailsFood"
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_main_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/foto_da_comida" />

    <TextView
        android:id="@+id/txtFood_detailsFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_dp"
        android:layout_marginBottom="@dimen/small_dp"
        android:textColor="@color/white"
        android:textSize="@dimen/title_sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgFood_detailsFood"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtDescriptionFood_detailsFOod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_dp"
        android:padding="@dimen/small_dp"
        android:text="@string/lorem_ipsum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFood_detailsFood" />

</androidx.constraintlayout.widget.ConstraintLayout>